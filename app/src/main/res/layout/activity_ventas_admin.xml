            <TextView
                android:id="@+id/LabelClientesAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/LabelVentas"
                android:textColor="@color/blancorusti"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.933"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Logo03" />

            <TextView
                android:id="@+id/textFiltros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LabelFiltrosVentas"
                android:textColor="@color/blancorusti"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.038"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LabelClientesAdmin" />

            <TextView
                android:id="@+id/textFiltros2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/LabelFiltrosVentasFecha1"
                android:textColor="@color/blancorusti"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.031"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textFiltros" />

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="148dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="20dp"
                android:background="@color/blancorusti"
                android:ems="10"
                android:inputType="date"
                android:textColor="@color/negroRusti"
                app:layout_constraintBottom_toTopOf="@+id/BuscarInvenGra"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textFiltros2"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textFiltros3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/LabelFiltrosVentasFecha2"
                android:textColor="@color/blancorusti"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/editTextDate2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.448"
                app:layout_constraintStart_toEndOf="@+id/textFiltros2" />

            <EditText
                android:id="@+id/editTextDate2"
                android:layout_width="148dp"
                android:layout_height="36dp"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="20dp"
                android:background="@color/blancorusti"
                android:ems="10"
                android:inputType="date"
                android:textColor="@color/negroRusti"
                app:layout_constraintBottom_toTopOf="@+id/BuscarInvenGra"
