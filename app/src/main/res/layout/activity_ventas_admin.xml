            <TextView
                android:id="@+id/textCostoVenta1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LabelCostoVenta1"
                android:textColor="@color/blancorusti"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/FondoDatosInven01"
                app:layout_constraintEnd_toEndOf="@+id/FondoDatosInven01"
                app:layout_constraintHorizontal_bias="0.612"
                app:layout_constraintStart_toEndOf="@+id/textDesVenta1"
                app:layout_constraintTop_toBottomOf="@+id/TextVenta1"
