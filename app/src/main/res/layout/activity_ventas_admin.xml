                android:layout_marginEnd="40dp"
                android:layout_marginBottom="32dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/LabelMasOpcionesBtn"
                app:layout_constraintBottom_toTopOf="@+id/FondoDatosInven01"
                app:layout_constraintEnd_toStartOf="@+id/compartirBtn"
                app:layout_constraintHorizontal_bias="0.666"
                app:layout_constraintStart_toEndOf="@+id/opcionesVentasBtn"
                app:srcCompat="@drawable/ic_grupo_102" />

            <ImageButton
                android:id="@+id/compartirBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="72dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/LabelCompartirBtn"
                app:layout_constraintBottom_toTopOf="@+id/FondoDatosInven01"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                app:layout_constraintVertical_bias="0.31"
