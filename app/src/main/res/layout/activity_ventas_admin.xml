            <TextView
                android:id="@+id/textCostoVenta2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LabelCostoVenta2"
                android:textColor="@color/blancorusti"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/FondoDatosInven02"
                app:layout_constraintEnd_toEndOf="@+id/FondoDatosInven02"
                app:layout_constraintHorizontal_bias="0.61"
                app:layout_constraintStart_toEndOf="@+id/textDesVenta2"
                app:layout_constraintTop_toBottomOf="@+id/textVenta2"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imgIconVentas3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/altIconVentas"
                app:layout_constraintBottom_toBottomOf="@+id/FondoDatosInven03"
