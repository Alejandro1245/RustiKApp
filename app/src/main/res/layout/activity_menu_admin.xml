<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuAdmin">

    <ImageView
        android:id="@+id/FondoMenuAdmin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/altFondoAdmin"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/Inferior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Superior"
        app:srcCompat="@drawable/gesti_n_almacen__1" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/Superior"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/Inferior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/LabelGestionRustiK"
            android:textColor="@color/blancorusti"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.765"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Logo03"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/Logo03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/altLogo01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_pizzeria_sin_fondo" />

        <Button
            android:id="@+id/SalirMenuBtn"
            android:layout_width="19dp"
            android:layout_height="17dp"
            android:layout_marginEnd="12dp"
            android:background="@android:color/darker_gray"
            android:text="@string/LabelSalirBtn"
            android:textColor="@color/blancorusti"
            app:layout_constraintEnd_toStartOf="@+id/Logo03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/Inferior"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imgDatosMenuAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/altimgAdminDatos"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/imagenadmin" />

        <TextView
            android:id="@+id/IntroRegistro"
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:contentDescription="@string/altFondoLoginScreen"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="@string/LabelSeleccionAdmin"
            android:textAlignment="center"
            android:textColor="@color/blancorusti"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/InventarioBtn"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="48dp"
            android:layout_marginVertical="2dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/verdeBotones"
            android:elevation="20dp"
            android:ellipsize="middle"
            android:forceHasOverlappingRendering="true"
            android:isScrollContainer="false"
            android:padding="0dp"
            android:text="@string/LabelInventarioBtn"
            android:textColor="@color/negroRusti"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ClientesBtn"
            android:layout_width="176dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp"
            android:layout_marginHorizontal="48dp"
            android:layout_marginVertical="2dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/verdeBotones"
            android:elevation="20dp"
            android:gravity="center"
            android:includeFontPadding="true"
            android:padding="0dp"
            android:text="@string/LabelClientesBtn"
            android:textAlignment="center"
            android:textColor="@color/negroRusti"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/VentasBtn"
            android:layout_width="176dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/verdeBotones"
            android:elevation="20dp"
            android:padding="0dp"
            android:text="@string/LabelVentasBtn"
            android:textColor="@color/negroRusti"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>